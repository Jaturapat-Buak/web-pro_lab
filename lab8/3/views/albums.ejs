<!DOCTYPE html>
<html>
<head>
    <title>Albums</title>
    <style>
        body {
            font-family: Arial;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }
        .card {
            border: 1px solid #ccc;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 2px 2px 5px #aaa;
        }
        .card img {
            width: 100%;
            aspect-ratio: 1 / 1;
            object-fit: contain;
        }
    </style>
</head>
<body>

<h1>Song List</h1>

<div class="grid">
    <% albums.forEach(item => { %>
        <div class="card">
            <img src="<%= item.album_cover %>" alt="Album Cover">
            <h3><%= item.song %></h3>
            <p><strong>Artist:</strong> <%= item.artist %></p>
            <p><strong>Album:</strong> <%= item.album %></p>
            <p><strong>Year:</strong> <%= item.year %></p>
            <p><strong>Genre:</strong> <%= item.genre %></p>
        </div>
    <% }) %>
</div>

</body>
</html>
